pipeline {

    agent any
    tools {
        maven 'Maven_3.8.1' 
    }
    stages {
        stage('Compile stage') {
            steps {
                parallel(
                    DailySharePrice : {bat "mvn -fDailySharePrice/pom.xml clean compile"},
                    DailyMutualFundNAV : {bat "mvn -fDailyMutualFundNAV/pom.xml clean compile"},
                    calculateNetworth  : {bat "mvn -fcalculateNetworth/pom.xml clean compile"},
                    authorizationService  : {bat "mvn -fauthorizationService/pom.xml clean compile"},
                    viewController  : {bat "mvn -fviewController/pom.xml clean compile"}
                )
        }
    }

         stage('testing stage') {
             steps {
                 parallel(
                    DailySharePrice : {bat "mvn -fDailySharePrice/pom.xml test"},
                    DailyMutualFundNAV : {bat "mvn -fDailyMutualFundNAV/pom.xml test"},
                    calculateNetworth  : {bat "mvn -fcalculateNetworth/pom.xml test"},
                    authorizationService  : {bat "mvn -fauthorizationService/pom.xml test"},
                    viewController  : {bat "mvn -fviewController/pom.xml test"}
                )
        }
    }

          stage('package stage') {
              steps {
               parallel(
                    DailySharePrice : {bat "mvn -fDailySharePrice/pom.xml package"},
                    DailyMutualFundNAV : {bat "mvn -fDailyMutualFundNAV/pom.xml package"},
                    calculateNetworth  : {bat "mvn -fcalculateNetworth/pom.xml package"},
                    authorizationService  : {bat "mvn -fauthorizationService/pom.xml package"},
                    viewController  : {bat "mvn -fviewController/pom.xml package"}
                )
        }
    }

  }

}


